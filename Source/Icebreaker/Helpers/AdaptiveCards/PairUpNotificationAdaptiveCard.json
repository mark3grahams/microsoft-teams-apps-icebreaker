{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "size": "Medium",
          "weight": "Bolder",
          "text": "${matchUpCardTitleContent}",
          "wrap": true,
          "maxLines": 2,
          "horizontalAlignment": "${textAlignment}"
        }
      ]
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "Container",
          "items": [
            {
              "type": "TextBlock",
              "text": "${matchUpCardMatchedText}",
              "wrap": true,
              "horizontalAlignment": "${textAlignment}"
            }
          ]
        },
        {
          "type": "Container",
          "items": [
            {
              "type": "TextBlock",
              "text": "Use one of the buttons below to get started:\n\nChat – messages your connection so you can discuss a date and time.\n\nPropose meetup − finds the soonest time you are both available. (Be aware: This could mean setting up a meeting 15 minutes from now if your Outlook calendar shows you are both free.)\n\nPause all matches – temporarily halts your participation in DechMates.",
              "wrap": true,
              "horizontalAlignment": "${textAlignment}"
            }
          ]
        },
        {
          "type": "TextBlock",
          "text": "${matchUpCardContentPart2}",
          "wrap": true,
          "horizontalAlignment": "${textAlignment}"
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.OpenUrl",
      "title": "${chatWithMatchButtonText}",
      "url": "https://teams.microsoft.com/l/chat/0/0?users=${personUpn}&message=${chatWithMessageGreeting}"
    },
    {
      "type": "Action.OpenUrl",
      "title": "${proposeMeetupButtonText}",
      "url": "${meetingLink}"
    },
    {
      "type": "Action.Submit",
      "title": "${pauseMatchesButtonText}",
      "data": {
        "msteams": {
          "type": "messageBack",
          "displayText": "${pauseMatchesButtonText}",
          "text": "optout"
        }
      }
    }
  ],
  "version": "1.0"
}